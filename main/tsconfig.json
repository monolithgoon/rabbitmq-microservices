{
	"compilerOptions": {
		"lib": ["es5", "es6", "dom"],
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
    "rootDir": "./src",
		"outDir": "./dist",
		"strict": true,
		"alwaysStrict": true,
		"esModuleInterop": true
	},
  "include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist/"],
	"typeRoots": ["./node_modules/@types"]
}